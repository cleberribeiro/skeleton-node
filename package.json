{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "Start setup for nodejs projects",
  "repository": {
    "url": "https://github.com/cleberribeiro/skeleton-node.git"
  },
  "main": "src/server.ts",
  "scripts": {
    "build": "./node_modules/.bin/babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify src/server.ts",
    "test": "jest"
  },
  "keywords": [
    "skeleton",
    "setup",
    "boot",
    "node",
    "js",
    "typescript"
  ],
  "author": "Cleber Ribeiro <contato@cleberribeiro.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.2",
    "ts-jest": "^26.4.2",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}
